      .col-md-4
        h3.primary-color.nicome-font Openning Hours
        table.info
          tbody
            tr
              td.text-white Mon - Fri
              td.text-white 07:30 am - 07:00 pm
            tr
              td.text-white Sat
              td.text-white 09:00 am - 02:00 pm
